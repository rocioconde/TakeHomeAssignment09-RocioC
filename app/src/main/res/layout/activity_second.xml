<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.takehomeassignment09_rocioc.SecondActivity">

    <EditText
        android:id="@+id/school_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="School Name" />

    <EditText
        android:id="@+id/number_of_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Students"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/has_programming_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Does the school have a programming course?" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Firebase"
        android:layout_gravity="center"
        android:onClick="addToFirebase" />

</LinearLayout>
